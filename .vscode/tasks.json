{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Linux Image",
            "type": "shell",
            "command": "docker pull lacledeslan/gamesvr-csgo; docker build . --rm -f Dockerfile.linux -t ll/gamesvr-csgo-freeplay --no-cache --build-arg BUILDNODE=$(hostname);",
            "windows": {
                "command": "docker pull lacledeslan/gamesvr-csgo; docker build . --rm -f Dockerfile.linux -t ll/gamesvr-csgo-freeplay --no-cache --build-arg BUILDNODE=$env:computername;",
            },
            "dependsOn": "Download git submodules",
            "group": "build",
            "problemMatcher": [],
            "promptOnClose": true
        },
        {
            "label": "Build & Execute Self Tests",
            "type": "shell",
            "command": "docker run -it --rm ll/gamesvr-csgo-freeplay ./ll-tests/gamesvr-csgo-freeplay.sh;",
            "dependsOn": "Build Linux Image",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "promptOnClose": true
        },
        {
            "label": "Build & Run Interactive Server",
            "type": "shell",
            "command": "docker run -it --net=host ll/gamesvr-csgo-freeplay ./srcds_run -game csgo +game_type 1 +game_mode 0 -tickrate 128 +mapgroup ll_arms +map ar_baggage +sv_lan 1 +rcon_password \"test123\";",
            "dependsOn": "Build Linux Image",
            "group": "build",
            "problemMatcher": [],
            "promptOnClose": true
        },
        {
            "label": "Build & Shell In",
            "type": "shell",
            "command": "docker run -it --net=host --rm ll/gamesvr-csgo-freeplay;",
            "dependsOn": "Build Linux Image",
            "group": "build",
            "problemMatcher": [],
            "promptOnClose": true
        },
        {
            "label": "Download git submodules",
            "type": "shell",
            "command": "git submodule foreach git pull origin master;",
            "problemMatcher": [],
            "promptOnClose": true
        },
        {
            "label": "Update git submodules",
            "type": "shell",
            "command": "git submodule update --recursive --remote;",
            "problemMatcher": [],
            "promptOnClose": true
        }
    ]
}
